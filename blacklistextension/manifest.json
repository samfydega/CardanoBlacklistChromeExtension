{
	"manifest_version": 2,
	"description": "This is an extension that lets the user check a blacklist of Cardano addresses before sending Ada to a wallet.",
	"name": "Cardano Blacklist Extension",
	"version": "0.0.4",
	"icons": {
		"16": "./images/16.png",
		"48": "./images/48.png",
		"128": "./images/128.png"
	},
	"content_scripts": [
		{
			"matches": ["https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js", 
				"https://www.gstatic.com/firebasejs/9.6.1/firebase-firestore.js", 
				"https://fonts.googleapis.com/css2?family=Anonymous+Pro:wght@400;700&family=Lato:wght@300;400&display=swap"],

			"js": ["./src/content.js"]
		}
	],
	"background": {
		"scripts": ["./src/background.js"]
	},
	"browser_action": {
		"default_icon": "./images/icon.png",
		"default_popup": "./src/home.html",
		"default_title": "Ethereum Blacklist Extension"
	},
	"content_security_policy": "script-src 'self' https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js https://www.gstatic.com/firebasejs/9.6.1/firebase-firestore.js; object-src 'self'"
}
